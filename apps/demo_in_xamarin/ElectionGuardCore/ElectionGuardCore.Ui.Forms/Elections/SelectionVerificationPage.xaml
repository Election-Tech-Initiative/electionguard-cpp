<?xml version="1.0" encoding="utf-8" ?>
<uiforms:PageBase
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:uiforms="clr-namespace:ElectionGuardCore.Ui.Forms"
	x:Class="ElectionGuardCore.Ui.Forms.Elections.SelectionVerificationPage"
	Title="{Binding Title}"
	BackgroundColor="#F3F2F7"
>
	<ContentPage.Content>
		<StackLayout Spacing="0">
			<Label
				Text="Below is your tracking ID. You can use this to verify your ballot was successfully included in the election."
				LineBreakMode="WordWrap"
				MaxLines="4"
				Margin="20,20,20,0"
				VerticalOptions="StartAndExpand"
			/>
			<Label
				Text="{Binding EncryptionResult.TrackingCode}"
				FontAttributes="Bold"
				FontSize="20"
				HorizontalOptions="Center"
				VerticalOptions="Center"
				HorizontalTextAlignment="Center"
				WidthRequest="250"
				LineBreakMode="WordWrap"
				MaxLines="6"
			/>
			<Button
				Text="Copy"
				Command="{Binding CopyTrackingCodeCommand}"
				VerticalOptions="Center"
				Margin="0,12,0,0"
			/>
			<Button
				Style="{StaticResource ButtonPrimary}"
				Text="Cast"
				Command="{Binding CastCommand}"
				WidthRequest="300"
				HorizontalOptions="CenterAndExpand"
				VerticalOptions="EndAndExpand"
				Margin="0,0,0,12"
			/>
			<Button
				Text="Test"
				Command="{Binding SpoilCommand}"
				VerticalOptions="End"
				HeightRequest="60"
				Margin="0,0,0,12"
			/>
		</StackLayout>
	</ContentPage.Content>
</uiforms:PageBase>