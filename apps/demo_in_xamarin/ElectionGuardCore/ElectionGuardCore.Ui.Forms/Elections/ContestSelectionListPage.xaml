<?xml version="1.0" encoding="utf-8" ?>
<uiforms:PageBase
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:uiforms="clr-namespace:ElectionGuardCore.Ui.Forms"
	x:Class="ElectionGuardCore.Ui.Forms.Elections.ContestSelectionListPage"
	Title="{Binding Title}"
	BackgroundColor="#F3F2F7"
>
    <ContentPage.Content>
		<ListView
			ItemsSource="{Binding Candidates}"
			SeparatorVisibility="None"
			BackgroundColor="Transparent"
			RowHeight="80"
		>
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Grid
							HorizontalOptions="CenterAndExpand"
							Margin="0,5"
						>
							<BoxView
								BackgroundColor="White"
								CornerRadius="16"
								WidthRequest="300"
								HeightRequest="80"
							/>
							<Label
								Text="{Binding BallotName}"
								LineBreakMode="WordWrap"
								MaxLines="2"
								Margin="14,0"
								VerticalOptions="CenterAndExpand"
							/>
						</Grid>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
    </ContentPage.Content>
</uiforms:PageBase>